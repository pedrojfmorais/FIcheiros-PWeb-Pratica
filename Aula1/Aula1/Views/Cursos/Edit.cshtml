@model Curso

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Editar Curso";
}

<h1>Edit</h1>

<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="col-md-4"></div>
            <div class="col-md-8">
                <p>Adicionar imagens</p>
                <div class="form-group">
                    <input type="file" name="ficheiros" id="ficheiros"
                           multiple
                           accept=".png,.jpg,.jpeg,image/png,image/jpeg"
                           class="form-control" />
                </div>
                <p>Galeria de imagens</p>
                <div class="row d-flex">
                    @foreach (var file in ViewBag.Ficheiros)
                    {
                        <div class="col p-2 m-2" style="border-radius:10px;">
                            <a asp-action="deleteImage"
                           asp-route-id="@Model.Id"
                           asp-route-image="@file">
                                <svg bootstrap-icon="XCircleFill" onclick="return confirm('Tem a certeza?')"
                                 class="text-danger" width="24" aria-label="Thrash"></svg>
                            </a>
                            <img src="@file"
                             class="img-thumbnail"
                             style="max-width:150px; max-height:150px" />
                        </div>
                    }

                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EmDestaque" /> @Html.DisplayNameFor(model => model.EmDestaque)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId"
                        class="form-control"
                        asp-items="ViewBag.CategoriaId">
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <TextArea asp-for="Descricao" class="form-control"></TextArea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoResumida" class="control-label"></label>
                <TextArea asp-for="DescricaoResumida" class="form-control"></TextArea>
                <span asp-validation-for="DescricaoResumida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requisitos" class="control-label"></label>
                <TextArea asp-for="Requisitos" class="form-control"></TextArea>
                <span asp-validation-for="Requisitos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdadeMinima" class="control-label"></label>
                <input asp-for="IdadeMinima" class="form-control" />
                <span asp-validation-for="IdadeMinima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
